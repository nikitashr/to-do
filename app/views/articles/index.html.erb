<h1>To Do List</h1>
 
<%= link_to 'New Task', new_article_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Note</th>
    <th colspan="2"></th>
  </tr>
 
  <% @articles.each do |article| %>
    <tr>
      <td><%= article.title %></td>
      <td><%= article.note %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
      <td><%= link_to 'Edit', edit_article_path(article) %></td>
    </tr>
  <% end %>
</table>
